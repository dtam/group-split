<p>
  <strong>Name:</strong>
  <%= @report.name %>
</p>

<p>
  <strong>People:</strong>
    <% if @report.people %>
      <ul>
        <% @report.report_people.each do |report_person| %>
          <li><%= report_person.person.email %>
          </li>
        <% end %>
      </ul>
    <% end %>
</p>

<p>
<strong>Expenses:</strong>
  <table>
    <tr>
      <th>Vendor</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Who Paid</th>
    </tr>
    <% @report.expenses.each do |expense| %>
      <tr>
        <td><%= expense.vendor %></td>
        <td><%= expense.date %></td>
        <td>$<%= expense.amount %></td>
        <td><%= expense.person.email %></td>
      </tr>
    <% end %>
  </table>
</p>

<p>Expense total: $<%= @report.sum_expenses %></p>
<p>Individual obligation: $<%= @report.individual_obligation %></p>

<p>
<strong>Reconciliation:</strong>
  <table>
    <tr>
      <th>Email</th>
      <th>Amount</th>
    </tr>
    <% @report.determine_owed_amounts.each do |email, amount| %>
      <tr>
        <td><%= email %></td>
        <td>$<%= amount %></td>
      </tr>
    <% end %>
  </table>
</p>

<p>
<strong>People Who Need to Pay:</strong>
  <table>
    <tr>
      <th>Email</th>
      <th>Amount Owed</th>
      <th>Owed To</th>
    </tr>
    <% @report.determine_pay_to.each do |p_email, p_amount, n_email| %>
        <tr>
          <td><%= p_email %></td>
          <td>$<%= p_amount %></td>
          <td><%= n_email %></td>
        </tr>
      <% end %>
  </table>
</p>

<%= link_to 'Back', reports_path %>
