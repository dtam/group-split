<div class="container">

  <div class="row">
    <div class="col-xs-12 text-center">
      <h3>My Reports</h3>
    </div>
  </div>

  <!-- Row contains nested rows -->
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 well">

    <!-- Row with create button -->
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= link_to 'Create New Report', new_report_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div class="table-responsive">
            <table class="table table-condensed">
              <tr>
                <th >In Progress</th>
              </tr>
              <% @reports.each do |report| %>
                <% if report.reconciled == false %>
                  <tr>
                    <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <%= link_to report.name, report_path(report) %></td>
                  </tr>
                <% end %>
              <% end %>
            </table>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="table-responsive">
            <table class="table table-condensed">
              <tr>
                <th>Reconciled</th>
              </tr>
              <% @reports.each do |report| %>
                <% if report.reconciled == true %>
                  <tr>
                    <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    <%= link_to report.name, report_results_path(report) %></td>
                  </tr>
                <% end %>
              <% end %>
            </table>
          </div>
        </div>
       </div>
    </div>
  </div>
  <!-- End of row with nested rows -->

</div>
