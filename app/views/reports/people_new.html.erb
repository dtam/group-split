<div class="container">

  <div class="row">
    <div class="col-xs-12 text-center">
      <h3>New Person</h3>
    </div>
  </div>

  <!-- Outer row -->
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <!-- Inner rows start here -->
      <% if @person && @person.errors.any? %>
        <div class="row">
          <div class="col-xs-12">
            <div class="alert alert-dismissible alert-info">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
                <ul>
                  <% @person.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form starts here -->
      <div class="well">
        <div class="row">
          <%= form_for ([@report, @report.people.build]) do |f| %>
            <div class="col-xs-12">
              <div class="form-group">
                <label for="email">Email</label>
                  <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>

            <!-- Buttons start here -->
            <div class="col-xs-12">
              <div class="btn-toolbar pull-right">
                <div class="btn-group">
                  <%= link_to 'Cancel', report_path(@report), class: 'btn btn-default btn-sm' %>
                </div>

                <div class="btn-group">
                  <%= f.submit "Submit", class: 'btn btn-success btn-sm pull-right' %>
                </div>
              </div>
            </div>
          <% end %> <!-- Form ends here -->
        </div>
      </div>

    </div>
  </div>

</div>
