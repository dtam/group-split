<div class="container">

  <div class="row">
    <div class="col-xs-12 text-center">
      <h3>Add New Person</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= form_for ([@report, @report.people.build]) do |f| %>

        <% if @person && @person.errors.any? %>
          <div id="error_explanation">
            <h4>
              <%= pluralize(@person.errors.count, "error") %> prohibited
              this person from being saved:
            </h4>
            <ul>
              <% @person.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label for="email">Email</label>
            <%= f.text_field :email, class: 'form-control' %>
        </div>
            <%= f.submit "Submit", class: 'btn btn-success btn-sm pull-right' %>

      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= link_to 'Back to Report', report_path(@report), class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>
