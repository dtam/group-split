<!-- Outer row -->
<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">

    <!-- Inner rows start here -->
    <% if @report.errors.any? %>
      <div class="row">
        <div class="col-xs-12">
          <div class="alert alert-dismissible alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
              <ul>
                <% @report.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form starts here -->
    <div class="well">
      <div class="row">
        <%= form_for @report, class: "form-horizontal" do |f| %>
          <div class="col-xs-12">
            <div class="form-group">
              <label for="report-name">Name</label>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <!-- Buttons start here -->
          <div class="col-xs-12">
            <div class="btn-toolbar pull-right">

              <div class="btn-group">
                <% if @report.id.nil? %>
                  <%= link_to 'Cancel', reports_path, class: 'btn btn-default btn-sm' %>
                <% else %>
                  <%= link_to 'Cancel', report_path, class: 'btn btn-default btn-sm' %>
                <% end %>
              </div>

              <div class="btn-group">
                <%= f.submit "Submit", class: 'btn btn-success btn-sm' %>
              </div>

            </div>
          </div>
        <% end %> <!-- Form ends here -->
      </div>
    </div>

  </div>
</div>
