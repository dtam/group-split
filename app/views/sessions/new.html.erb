<div class="container">

  <div class="row">
    <div class="col-xs-12 text-center">
      <h1 class="brand-name">GroupSplit</h1>
    </div>
  </div>

  <% if @errors.length > 0 %>
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="alert alert-dismissible alert-info">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <ul>
              <% @errors.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Create inner box with well -->
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 well">

      <!-- Form element -->
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag '/login', method: :post, :class => "form-horizontal" do %>
          <div class="form group">
            <label for="input-email">Email</label>
            <%= text_field_tag :email, params[:email], class: 'form-control' %>
          </div>

          <div class="form group">
            <label for="input-password">Password</label>
            <%= password_field_tag :password, params[:password], class: 'form-control' %>
          </div>
          <br>
            <%= submit_tag "Log In", class: 'btn btn-primary btn-lg btn-block' %>
          <% end %>
        </div>
     </div><br>

    <div class="row">
      <div class="col-xs-12 text-center">
        New to GroupSplit? <%= link_to 'Sign Up Here', '/', class: 'btn btn-default btn-sm' %>
      </div>
    </div>

    </div>
  </div>
  <!-- End of inner box with well -->
</div>
