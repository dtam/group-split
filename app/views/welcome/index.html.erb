<div class="container">

  <div class="row">
    <div class="col-xs-12 text-center">
      <h1 class="brand-name">GroupSplit</h1>
    </div>
  </div>

  <% if @errors.length > 0 %>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="alert alert-dismissible alert-info">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <ul>
              <% @errors.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
<% end %>

  <div class="row">
    <div class="span6">
      <div class="col-xs-12 col-sm-6 text-center" id="description">
          <p>Easily split group expenses.</p>
          <p>GroupSplit does the math and tells you who needs to pay who.</p>
      </div>
    </div>
    <div class="span6">
      <div class="col-xs-12 col-sm-4 col-sm-offset-1">

        <%= form_for :user, url: '/users' do |f| %>
        <div class="form group">
          <label for="input-email">Email</label>
            <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form group">
          <label for="input-password">Password</label>
            <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form group">
          <label for="input-password2">Confirm Password</label>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <br>
            <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
  </div><br>

  <div class="row">
    <div class="span6">
      <div class="col-xs-12 col-sm-6"></div>
    </div>
    <div class="span6">
      <div class="col-xs-12 col-sm-4 col-sm-offset-1 text-center">
        Already a user? <%= link_to 'Log In Here', '/login', class: 'btn btn-default btn-sm' %>
      </div>
    </div>
  </div>
</div>
